<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Victuz.Views.ApiView"
             Title="Weer API">

    <VerticalStackLayout Padding="10">
        <!-- Titel -->
        <Label 
            Text="Weergegevens om te controleren of het wel goed weer wordt op het event"
            FontSize="24"
            HorizontalOptions="Center" />

        <!-- Weergegevens -->
        <Label Text="{Binding WeatherDescription}"
               FontSize="18"
               HorizontalOptions="Center" />

        <!-- Knop om het weer op te halen -->
        <Button Text="Laad Weer"
                Command="{Binding LoadWeatherCommand}"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
