<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Victuz.Views.LoginView"
             Title="Login"
             BackgroundColor="White">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Label Text="Welcome By Victuz!" FontSize="24" HorizontalTextAlignment="Center" TextColor="Black"/>
        <Entry Placeholder="Email" x:Name="EmailEntry" TextColor="Black" BackgroundColor="white"/>
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" TextColor="Black" BackgroundColor="White"/>
        <Button Text="Login" BackgroundColor="Red" TextColor="White" Clicked="OnLoginClicked"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Don't have an account?" TextColor="Black"/>
            <Button Text="Sign Up" TextColor="Red" Clicked="OnRegisterClicked" BackgroundColor="Transparent"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>