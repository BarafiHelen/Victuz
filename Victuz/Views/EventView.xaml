<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Victuz.Views.EventView"
             Title="Events"
             BackgroundColor="White">
    <VerticalStackLayout Padding="10">

        <!-- Knop om een nieuw evenement toe te voegen -->
        <Button Text="Add New Event"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="OnAddEventClicked"
                HorizontalOptions="Center" />

        <!-- Lijst met evenementen -->
        <SearchBar Placeholder="Search Events..."
                   TextChanged="OnSearchBarTextChanged"
                   BackgroundColor="LightGray" />
        <ListView x:Name="EventListView"
                  ItemSelected="OnEventSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10">
                            <Label Text="{Binding Title}" FontSize="18" TextColor="Black" />
                            <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>