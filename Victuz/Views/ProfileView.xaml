<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Victuz.ViewModels"
             x:Class="Victuz.Views.ProfileView"
             Title="Profile"
             BindingContext="{x:Static vm:ProfileViewModel.Instance}"
             BackgroundColor="White">
    <VerticalStackLayout Padding="20">
        <Label Text="My Profile" FontSize="24" TextColor="Black"/>
        <Entry Text="{Binding Name}" Placeholder="Full Name" TextColor="Black" BackgroundColor="LightGray"/>
        <Entry Text="{Binding Email}" Placeholder="Email" TextColor="Black" BackgroundColor="LightGray" IsReadOnly="True"/>
        <Entry Text="{Binding PhoneNumber}" Placeholder="Phone Number" TextColor="Black" BackgroundColor="LightGray"/>
        <Button Text="Save Changes" BackgroundColor="Red" TextColor="White" Command="{Binding SaveCommand}"/>
    </VerticalStackLayout>
</ContentPage>