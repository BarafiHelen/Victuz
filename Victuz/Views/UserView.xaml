<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Victuz.ViewModels"
             x:Class="Victuz.Views.UserView"
             Title="Users"
              BackgroundColor="#F8F8F8">

    <ContentPage.BindingContext>
        <viewmodels:UserViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, *, Auto" Padding="15">

        <!-- Titel -->
        <Label Text="Users"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               Grid.Row="0"
               Margin="0,0,0,10" />

        <!-- Zoekbalk -->
        <SearchBar Placeholder="Search Users..."
                   x:Name="SearchBar"
                   TextChanged="OnSearchTextChanged"
                   BackgroundColor="White"
                   HeightRequest="45"
                   Grid.Row="1"
                   Margin="0,0,0,10" />

        <!-- Gebruikerslijst -->
        <Frame BackgroundColor="White" CornerRadius="10" Padding="5" HasShadow="True" Grid.Row="2">
            <ListView x:Name="UserListView"
                      ItemsSource="{Binding FilteredUsers}"
                      SelectedItem="{Binding SelectedUser}"
                      BackgroundColor="Transparent"
                      SelectionMode="Single"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                                <Label Text="{Binding EmailAddress}" FontSize="14" TextColor="Gray" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>

        <!-- Knoppen -->
        <VerticalStackLayout Spacing="10" Padding="10" Grid.Row="3">
            <Button Text="âž• Add User"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding AddUserCommand}"
                    HeightRequest="50"
                    CornerRadius="10" />
            <Button Text="ðŸ—‘ï¸ Remove User"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding DeleteUserCommand}"
                    IsEnabled="{Binding IsDeleteEnabled}"
                    HeightRequest="50"
                    CornerRadius="10" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>