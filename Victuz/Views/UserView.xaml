<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Victuz.ViewModels"
             x:Class="Victuz.Views.UserView"
             Title="Users"
             BackgroundColor="white">

    <ContentPage.BindingContext>
        <viewmodels:UserViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Titel -->
        <Label Text="Gebruikers" FontSize="24" TextColor="Red" FontAttributes="Bold" HorizontalOptions="Center" />

        <!-- Zoekbalk -->
        <SearchBar Placeholder="Zoek gebruikers..."
                   Text="{Binding SearchText}"
                   TextChanged="OnSearchTextChanged"
                   BackgroundColor="#F0F0F0"
                   TextColor="Black" />

        <!-- Gebruikerslijst -->
        <ListView x:Name="UserListView"
                  ItemsSource="{Binding FilteredUsers}"
                  SelectedItem="{Binding SelectedUser}"
                  BackgroundColor="White"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10">
                            <Label Text="{Binding Name}" FontSize="18" TextColor="Black" />
                            <Label Text="{Binding EmailAddress}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Knoppen -->
        <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
            <Button Text="Add User"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding AddUserCommand}"
                    WidthRequest="100" />
            <Button Text="Delete User"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding DeleteUserCommand}"
                    IsEnabled="{Binding IsDeleteEnabled}"
                    WidthRequest="100" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>