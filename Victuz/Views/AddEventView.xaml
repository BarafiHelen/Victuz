<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Victuz.Views.AddEventView"
             Title="Add Event">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry Placeholder="Event Title" x:Name="TitleEntry" />
            <Entry Placeholder="Event Time (e.g., 18:00)" x:Name="TimeEntry" Keyboard="Text" />
            <DatePicker x:Name="DatePicker" />
            <Entry Placeholder="Location" x:Name="LocationEntry" />
            <Editor Placeholder="Description" x:Name="DescriptionEditor" HeightRequest="100" />
            <Entry Placeholder="Max Participants" x:Name="MaxParticipantsEntry" Keyboard="Numeric" />
            <Button Text="Add Event" Clicked="OnAddEventClicked" BackgroundColor="Red" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
