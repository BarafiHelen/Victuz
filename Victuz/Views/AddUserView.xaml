<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Victuz.Views.AddUserView"
             Title="Add User"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Add a New User" FontSize="24" TextColor="Black" FontAttributes="Bold" />

        <Entry x:Name="NameEntry" Placeholder="Name" BackgroundColor="LightGray" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" BackgroundColor="LightGray" />
        <Entry x:Name="PhoneNumberEntry" Placeholder="Phone Number" Keyboard="Telephone" BackgroundColor="LightGray" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" BackgroundColor="LightGray" />

        <Button Text="Save User" BackgroundColor="Red" TextColor="White" Clicked="OnSaveUserClicked" />
    </VerticalStackLayout>

</ContentPage>