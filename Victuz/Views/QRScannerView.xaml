<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui;assembly=ZXing.Net.Maui"
             x:Class="Victuz.Views.QRScannerView"
             Title="QR Scanner"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Scan QR Code" FontSize="24" TextColor="Black" HorizontalOptions="Center"/>

        <!-- QR Code Scanner -->
        <zxing:CameraView x:Name="cameraView"
                          BarcodeDetected="CameraView_OnDetected"
                          IsScanning="True"
                          IsTorchOn="False"
                          HorizontalOptions="center"
                          VerticalOptions="center" />
        
        <Label x:Name="ResultLabel" Text="Scan result will appear here." TextColor="Black" HorizontalOptions="Center"/>

        <Button Text="Start Scanner" BackgroundColor="Red" TextColor="White" Clicked="OnStartScannerClicked"/>

    </VerticalStackLayout>
</ContentPage>