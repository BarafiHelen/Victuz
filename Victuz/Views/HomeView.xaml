<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Victuz.Views"
            x:Class="Victuz.Views.HomeView"
            BackgroundColor="#FFFFFF"
            BarBackgroundColor="#FF0000"
            BarTextColor="White">

    <!-- Startpagina met introductie -->
    <ContentPage Title="Home" IconImageSource="home_icon.png">
        <VerticalStackLayout Padding="50" Spacing="50">
            <Label Text="Welkom bij Victuz!"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#FF0000" />
            <Label Text="Navigeer naar verschillende functies van de app via het menu hieronder."
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="#333333" />
            
            <Image Source="home_graphic.png"
                       Aspect="AspectFit"
                       HeightRequest="200"
                       HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ContentPage>

    <!-- Andere pagina's in het menu -->
    <views:EventView Title="Events" IconImageSource="event_icon.png" />
    <views:ProfileView Title="Profiel" IconImageSource="profile_icon.png" />
    <views:QRScannerView Title="QR Scanner" IconImageSource="qr_icon.png" />
    <views:ReviewView Title="Reviews" IconImageSource="review_icon.png" />
    <views:UserView Title="Users" IconImageSource="user_icon.png" />

</TabbedPage>
