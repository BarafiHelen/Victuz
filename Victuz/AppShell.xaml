<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Victuz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Victuz.Views"
    Title="Victuz">

    <TabBar>
        <Tab Title="Users">
            <ShellContent ContentTemplate="{DataTemplate views:UserView}" />
        </Tab>
        <Tab Title="Events">
            <ShellContent ContentTemplate="{DataTemplate views:EventView}" />
        </Tab>
        <Tab Title="Profile">
            <ShellContent ContentTemplate="{DataTemplate views:ProfileView}" />
        </Tab>
    </TabBar>
</Shell>
